<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ju_he_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mapdemo.JuHeSearchActivity">
    <fragment
        android:id="@+id/juHeMap"
        class="com.baidu.mapapi.map.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/item_ll"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="#e3d0d0"
            android:text="hello"/>

        <Button
            android:layout_marginTop="28dp"
            android:id="@+id/item_bt"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:background="#aeacd1"
            android:text="预约"/>
    </LinearLayout>

    <Button
        android:layout_marginLeft="30dp"
        android:text="地图"
        android:layout_alignParentBottom="true"
        android:id="@+id/diTu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <Button
        android:text="列表"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/diTu"
        android:id="@+id/lieBiao"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
