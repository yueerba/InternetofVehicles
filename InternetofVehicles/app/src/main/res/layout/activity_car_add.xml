<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="品牌:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarPingPai"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="POR"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="车型:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarCheXing"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="911"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="车牌:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarChePai"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="鄂D3638"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="油箱容量:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarYouXiang"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="60.0"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="发动机号:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarFaDongJiHao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="12345667890"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="车身级别:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarJiBie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="中型车"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="里程数:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarLiChengShu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="50000.0"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="发动机状态:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarFZT"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="YES"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="变速箱状态:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarBSZT"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="YES"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="车灯状态:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarCDZT"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="YES"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="剩余油量:"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ACarShengYuYouliang"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="30.0"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

       <Button
           android:text="提交"
           android:id="@+id/ASubmit"
           android:layout_width="100dp"
           android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
